{
  "compilerOptions": {
    "allowJs": false,
    "esModuleInterop": true,
    "inlineSourceMap": true,
    "isolatedModules": false,
    "module": "esnext",
    "moduleResolution": "node",
    "noFallthroughCasesInSwitch": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "strict": true,
    "target": "esnext",
    "baseUrl": ".",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "lib": ["esnext", "esnext.bigint"],
    "outDir": "dist",
    "rootDir": "./",
    "strictPropertyInitialization": false,
    "useUnknownInCatchVariables": false
  },
  "include": ["./**/*.ts", "./rollup.config.ts"],
  "ts-node": {
    "esm": true
  },
  "references": [
    {
      "path": "../scanner/packages/observation-extractors/bitcoin-observation-extractor"
    },
    {
      "path": "../scanner/packages/scanners/bitcoin-rpc-scanner"
    },
    {
      "path": "../scanner/packages/scanners/bitcoin-esplora-scanner"
    }
  ]
}
