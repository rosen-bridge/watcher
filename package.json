{
  "name": "cardano-watcher",
  "version": "1.0.0",
  "description": "Watcher process for cardano bridge to ergo",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "lint": "eslint .",
    "test": "rm -rf ./sqlite && tsc --noEmit && npm run lint && mocha --slow 3000 && rm -rf ./sqlite",
    "coverage": "c8 npm run test",
    "start:dev": "nodemon src/index.ts",
    "typeorm": "typeorm-ts-node-esm",
    "typeorm:generate:network": "npm run typeorm migration:generate src/migrations/watcher/network/networkModelMigration -- -d ./config/ormconfig.ts",
    "typeorm:generate:bridge": "npm run typeorm migration:generate src/migrations/watcher/bridge/bridgeModelMigration -- -d ./config/bridgeOrmConfig.ts",
    "typeorm:migrate": "npm run typeorm migration:run -- -d ./config/ormconfig.ts",
    "typeorm:migrate:bridge": "npm run typeorm migration:run -- -d ./config/bridgeOrmConfig.ts"
  },
  "repository": {
    "type": "git",
    "url": "git@git.ergopool.io:rozen-bridge/cardano-watcher.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@types/chai": "^4.3.0",
    "@types/chai-as-promised": "^7.1.5",
    "@types/chai-spies": "^1.0.3",
    "@types/config": "^0.0.41",
    "@types/express": "^4.17.13",
    "@types/json-bigint": "^1.0.1",
    "@types/mocha": "^9.1.0",
    "@types/node": "^17.0.21",
    "@types/sinon": "^10.0.11",
    "@typescript-eslint/eslint-plugin": "^5.28.0",
    "@typescript-eslint/parser": "^5.26.0",
    "axios-mock-adapter": "^1.20.0",
    "c8": "^7.11.3",
    "chai": "^4.3.6",
    "chai-as-promised": "^7.1.1",
    "eslint": "^8.16.0",
    "mocha": "^9.2.2",
    "nodemon": "^2.0.15",
    "sinon": "^14.0.0",
    "ts-mockito": "^2.6.1",
    "ts-node": "^10.7.0",
    "typescript": "^4.7.2"
  },
  "dependencies": {
    "@emurgo/cip14-js": "^3.0.1",
    "axios": "^0.26.1",
    "blakejs": "^1.2.1",
    "chai-spies": "^1.0.0",
    "config": "^3.3.7",
    "ergo-lib-wasm-nodejs": "^0.16.1",
    "express": "^4.17.3",
    "json-bigint": "^1.0.0",
    "pg": "^8.7.3",
    "reflect-metadata": "^0.1.13",
    "sleep-promise": "^9.1.0",
    "sqlite3": "^5.0.2",
    "@rosen-bridge/tokens": "^0.1.5",
    "tsconfig-paths": "^4.0.0",
    "typeorm": "^0.3.6"
  }
}
